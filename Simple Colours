import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner ob = new Scanner(System.in);
        int a = ob.nextInt();
        int b = ob.nextInt();
        long temp=b;
        for(int i=0;i<a-1;i++)
        {
          temp=temp*(b-1);
          temp = temp%1000000007;
          
        }
         System.out.println(temp);
    }
}
